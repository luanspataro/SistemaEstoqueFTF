@model List<Item>
@{
}

<div class="container">

    @foreach (var item in Model){

        var classeCor = "";
        if (item.Raridade == "Lendário")
        {
            classeCor = "lendario";
        }
        else if (item.Raridade == "Épico")
        {
            classeCor = "epico";
        }
        else if (item.Raridade == "Raro")
        {
            classeCor = "raro";
        }
        else if (item.Raridade == "Comum")
        {
            classeCor = "comum";
        }

        <div class="card">

            <div class="fundoEtiqueta"></div>
            <div class="etiqueta @classeCor"></div>

        <a href="/Itens/Edit/@item.Id" class="botaoEditar">
            <img src="/img/edit.png" alt="Editar" width="20">
        </a>

        <div class="img mb-1">
            <img src="/itens/@item.ImageFileName" width="60">
        </div>

        <h1 class="mb-0">@item.Nome</h1>

        <div class="content">
            <p class="mt-0 mb-1">
                R$ @item.Preco
            </p>
            <div class="display">
                <a class="minus" href="#">-</a>
                <p>@item.Quantidade</p>
                <a href="#">+</a>
            </div>
        </div>


    </div>
    }
</div>