@model ItemDto
@{
}

<!doctype html>
<html lang="pt">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
</head>
<body>
<div class="row d-flex align-items-center">
    <div class="mx-auto">
        <h2 class="text-center mb-3 mt-0">Novo item</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nome">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Preço</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Preco">
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Raridade</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Raridade">
                        <option value='Lendário'>Lendário</option>
                        <option value='Épico'>Épico</option>
                        <option value='Raro'>Raro</option>
                        <option value='Comum'>Comum</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Quantidade</label>
                <div class="col-sm-8">
                    <input class="form-control " asp-for="Quantidade">
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Imagem</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-dark">Confirmar</button>
                </div>

                <div class="botao col-sm-4 d-grid">
                    <a class="btn btn-outline-dark" asp-controller="Itens" asp-action="Index" role="button">
                        Cancelar
                    </a>
                </div>
            </div>

        </form>
    </div>
        </body>
</div>