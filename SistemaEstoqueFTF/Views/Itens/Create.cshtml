@model ItemDto
@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Novo item</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nome">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Preço</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Preco">
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Raridade</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Raridade">
                        <option value='Lendário'>Lendário</option>
                        <option value='Épico'>Épico</option>
                        <option value='Raro'>Raro</option>
                        <option value='Comum'>Comum</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Quantidade</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Quantidade">
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Imagem</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Confirmar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Itens" asp-action="Index" role="button">
                        Cancelar
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>